<h1><%= @event.name %></h1>
<table>
  <tbody>
    <tr>
      <th>Start Date</th>
      <td><%= @event.start_date %></td>
    </tr>
    <tr>
      <th>End Date</th>
      <td><%= @event.end_date %></td>
    </tr>
    <tr>
      <th>Media</th>
      <td><%= link_to @event.media, @event.media %></td>
    </tr>
    <tr>
      <th>Caption</th>
      <td><%= @event.caption %></td>
    </tr>
    <tr>
      <th>Credit</th>
      <td><%= @event.credit %></td>
    </tr>
  </tbody>
</table>

<p><%= @event.description %></p>